{
	"name": "hal-publications-block",
	"version": "0.1.5",
	"description": "Query api.archives-ouvertes.fr and display the result",
	"author": "David Vanderhaeghe",
	"license": "GPL-3",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style --fix",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --blocks-manifest",
		"env": "wp-env",
		"prettier": "prettier . -w *.php includes/*.php src/*.php",
		"sync-version": "node scripts/sync-version.js && npm run format && npm run prettier"
	},
	"devDependencies": {
		"@wordpress/env": "^10.36.0",
		"@wordpress/scripts": "^31.1.0"
	},
	"dependencies": {
		"@prettier/plugin-php": "^0.24.0"
	}
}
